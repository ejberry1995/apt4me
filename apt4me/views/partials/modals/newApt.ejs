<div class="modal fade" id="newAptModal" tabindex="-1" role="dialog" aria-labelledby="newAptModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newAptModalLabel">New Apartment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form >
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">Apartment Complex</span>
            </div>
            <input type="text" id='complexNew' name='complexNew' class="form-control" aria-describedby="basic-addon1">
          </div>
          
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">Floorplan Name</span>
            </div>
            <input type="text" class="form-control" id= 'nameNew' name='nameNew' aria-describedby="basic-addon1">
          </div>
          
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">Beds</span>
            </div>
            <input type="text" class="form-control" id='bedsNew' name='bedsNew' aria-describedby="basic-addon1">
          </div>
          
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">Baths</span>
            </div>
            <input type="text" class="form-control" id='bathsNew' name='bathsNew' aria-describedby="basic-addon1">
          </div>
  
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">SQFT</span>
            </div>
            <input type="text" class="form-control" id='sqftNew' name='sqftNew' aria-describedby="basic-addon1">
          </div>
  
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">Rent</span>
            </div>
            <input type="text" class="form-control" id='rentNew' name='rentNew' aria-describedby="basic-addon1">
          </div>
  
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">Deposit</span>
            </div>
            <input type="text" class="form-control" id='depositNew' name='depositNew' aria-describedby="basic-addon1">
          </div>
  
          <h3>Apartment Features</h3>
          <div id='newAptTagGroup' class="btn-group-toggle" data-toggle="buttons">
            <!--tags buttons generated here-->
          </div>
          <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#newTagModal" onclick="loadNewTagCreator('new')"> + </button>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" onclick="createApartment()">Create</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>